<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="conditionfilter_small_txt">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginBottom">5dip</item>
    </style>

    <style name="conditionfilter_large_txt">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="conditionfilter_btn_left_style">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">90dip</item>
        <item name="android:background">@drawable/btn_fiter_left_n</item>
    </style>

    <style name="conditionfilter_btn_right_style">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">90dip</item>
        <item name="android:background">@drawable/btn_fiter_right_n</item>
    </style>

    <style name="conditionfilter_btn_middle_style">
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">90dip</item>
        <item name="android:background">@drawable/btn_fiter_middle_n</item>
    </style>

    <style name="conditionfilter_img_style">
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:background">@drawable/bline</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="conditionfilter_edit_style">
        <item name="android:background">@drawable/editview_bg</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:minEms">5</item>
        <item name="android:hint"></item>
        <item name="android:inputType">number</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="conditionfilter_linearlayout" parent="@style/modle_style">
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="conditionfilter_recvoabtn_style">
        <item name="android:background">@drawable/btn_revocation</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>