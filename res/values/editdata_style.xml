<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="edit_txt" parent="@style/detail_info_line">
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="editdata_edit">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minEms">10</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="editdata_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item  name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:background">@drawable/layout_content_bg</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="edit_line" parent="@style/detail_info_line">
        <item name="android:textColor">@color/dark</item>
    </style>
</resources>