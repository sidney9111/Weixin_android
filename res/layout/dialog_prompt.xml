<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/dialog_prompt_message"
        style="@style/PLLoginText"
        android:gravity="center"
		android:singleLine="false"
        android:textColor="@color/dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/dialog_prompt_confirm"
            style="@style/PLLoginButton"
            android:background="@drawable/btn_four"
            android:text="@string/txt_comfirm"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_prompt_cannel"
            style="@style/PLLoginButton"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_four"
            android:text="@string/txt_cannel"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>