<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout 
    style="@style/modle_style"
    android:orientation="horizontal" >

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/evaluate_img_head"
        style="@style/modle_style"
        android:layout_height="60dp"
        android:layout_width="60dp"
         />

    <LinearLayout
        style="@style/modle_style"
        android:orientation="vertical" 
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/evaulate_txt_time"
            style="@style/detail_info_txt"
            />

        <LinearLayout
            style="@style/evaluate_list_item_style" >

            <TextView
                style="@style/detail_info_txt"
                android:text="@string/details_appearance_score_tag" />

            <RatingBar
                android:id="@+id/appearance_tag"
                style="@style/ratingbar_smallstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:paddingTop="5dp"
                android:rating="1" />
            
            <TextView android:id="@+id/appearance_num"
                style="@style/list_item_txt_tag"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
        <LinearLayout
           style="@style/evaluate_list_item_style" >

            <TextView
                style="@style/detail_info_txt"
                android:text="@string/details_service_score_tag" />

            <RatingBar
                android:id="@+id/service_tag"
                style="@style/ratingbar_smallstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:rating="1" />
            <TextView android:id="@+id/service_num"
                style="@style/list_item_txt_tag"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>