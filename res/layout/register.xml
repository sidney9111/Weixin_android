<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/title" />
    <ScrollView android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
    <LinearLayout
        style="@style/PLContentLayout" >
        
        <EditText
            android:id="@+id/register_edit_username"
            style="@style/PLRegisterEditText"
            android:ems="10"
            android:hint="@string/txt_register_phone_hint"
            android:maxLength="11"
            android:inputType="phone" >

            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/register_edit_password"
            style="@style/PLRegisterEditText"
            android:ems="10"
            android:maxLength="16"
            android:hint="@string/txt_register_password_hint"
            android:inputType="textPassword" >

        </EditText>
        <EditText
            android:id="@+id/register_edit_repassword"
            style="@style/PLRegisterEditText"
            android:ems="10"
            android:maxLength="16"
            android:hint="@string/txt_register_repassword_hint"
            android:inputType="textPassword" >

        </EditText>
        <EditText
            android:id="@+id/register_edit_nominate"
            style="@style/PLRegisterEditText"
            android:ems="10"
            android:maxLength="11"
            android:hint="@string/txt_register_recommended_hint"
            android:inputType="phone" >

        </EditText>
        <TextView 
            android:id="@+id/register_tips"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            />
    </LinearLayout>
</ScrollView>
</LinearLayout>