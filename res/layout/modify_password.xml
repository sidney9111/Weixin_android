<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout style="@style/PLContentLayout" >

            <EditText
                android:id="@+id/modify_password_edit_password"
                style="@style/PLRegisterEditText"
                android:inputType="textPassword" 
                android:hint="@string/modify_password_edit_password_hint"
                >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/modify_password_edit_newpassword"
                style="@style/PLRegisterEditText"
                android:inputType="textPassword" 
                android:hint="@string/modify_password_edit_newpassword_hint"
                />

            <EditText
                android:id="@+id/modify_password_edit_renewpassword"
                style="@style/PLRegisterEditText"
                android:inputType="textPassword" 
                android:hint="@string/modify_password_edit_renewpassword_hint"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>