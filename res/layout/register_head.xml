<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/title"/>
	
    <LinearLayout style="@style/PLContentLayout"
        android:gravity="center|top">
        <ImageView android:id="@+id/register_head_img_photo"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:src="@drawable/photo_bg"
            />
        <Button android:id="@+id/register_head_btn_select_photo"
            style="@style/PLButton"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark"
            android:text="@string/register_head_btn_select_tag"
            />
        <Button android:id="@+id/register_head_btn_select_camera_photo"
            style="@style/PLButton"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark"
            android:text="@string/register_head_btn_select_camera_tag"
            />
    </LinearLayout>
</LinearLayout>