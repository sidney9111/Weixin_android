<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <RelativeLayout style="@style/privacy_layout_style" >

        <TextView
            style="@style/privacy_info_txt"
            android:layout_alignParentLeft="true"
            android:text="@string/privacy_search" />

        <ToggleButton
            android:id="@+id/searchButton"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_hide_select"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>

    <include layout="@layout/h_line" />

    <RelativeLayout
        android:id="@+id/privacy_layout_head"
        style="@style/privacy_layout_style" >

        <TextView
            style="@style/privacy_info_txt"
            android:layout_alignParentLeft="true"
            android:text="@string/privacy_head" />

        <Button
            android:id="@+id/privacy_head_into"
            style="@style/PLRegisterGrzlButton"
            android:layout_alignParentRight="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/head_txt"
            style="@style/privacy_info_txt"
            android:layout_toLeftOf="@+id/privacy_head_into"
             />
    </RelativeLayout>

    <include layout="@layout/h_line" />

    <RelativeLayout
        android:id="@+id/privacy_layout_album"
        style="@style/privacy_layout_style" >

        <TextView
            style="@style/privacy_info_txt"
            android:layout_alignParentLeft="true"
            android:text="@string/privacy_albums" />

        <TextView
            android:id="@+id/album_txt"
            style="@style/privacy_info_txt"
            android:layout_toLeftOf="@+id/privacy_albums_into"
             />

        <Button
            android:id="@+id/privacy_albums_into"
            style="@style/PLRegisterGrzlButton"
            android:layout_alignParentRight="true"
            android:visibility="visible" />
    </RelativeLayout>

    <include layout="@layout/h_line" />

    <RelativeLayout
        android:id="@+id/privacy_layout_qq"
        style="@style/privacy_layout_style" >

        <TextView
            style="@style/privacy_info_txt"
            android:layout_alignParentLeft="true"
            android:text="@string/privacy_qq" />

        <TextView
            android:id="@+id/qq_txt"
            style="@style/privacy_info_txt"
            android:layout_toLeftOf="@+id/privacy_qq_into"
             />

        <Button
            android:id="@+id/privacy_qq_into"
            style="@style/PLRegisterGrzlButton"
            android:layout_alignParentRight="true"
            android:visibility="visible" />
    </RelativeLayout>

    <include layout="@layout/h_line" />

    <RelativeLayout
        android:id="@+id/privacy_layout_phone"
        style="@style/privacy_layout_style" >

        <TextView
            style="@style/privacy_info_txt"
            android:layout_alignParentLeft="true"
            android:text="@string/privacy_mobliephone" />

        <TextView
            android:id="@+id/phone_txt"
            style="@style/privacy_info_txt"
            android:layout_toLeftOf="@+id/privacy_mobliephone_into"
             />

        <Button
            android:id="@+id/privacy_mobliephone_into"
            style="@style/PLRegisterGrzlButton"
            android:layout_alignParentRight="true"
            android:visibility="visible" />
    </RelativeLayout>

    <include layout="@layout/h_line" />

</LinearLayout>